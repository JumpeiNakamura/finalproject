<h3>Add a New Deal!</h3>

<form action="/deals/create" class="col-md-3">
    <label>Deal name:</label>
    <input type="text" name="name" class="form-control input-sm" placeholder="Deal name...">
    <br>
    <label>Description:</label>
    <input type="text" name="description" class="form-control input-sm" placeholder="Deal description">
    <br>
    <label>Original price:</label>
    <input type="integer" name="original_price" class="form-control input-sm" placeholder="Original price">
    <br>
    <label>Deal price:</label>
    <input type="integer" name="deal_price" class="form-control input-sm" placeholder="Deal price">
    <br>
    <label>Choose the category of your new hotdeal:</label>
    <%= select_tag "category_id", options_for_select([['Tablet', 1], ['CellPhone', 2]]) %>
    <br>
    <label>Choose the product of your new hotdeal: </label>
    <%= select_tag "product_id", options_for_select([['iPad', 1], ['Nexus7', 2], ['Galaxy3', 3]]) %>
    <br>
    <label>Image URL:</label>
    <input type="text" name="image_url" class="form-control input-sm" placeholder="Image_url">
    <br>
    <label>Deal link (URL):</label>
    <input type="text" name="link" class="form-control input-sm" placeholder="Deal link (URL)">
    <br>

    <input type="submit" class="btn btn-success btn-md pull-right">
</form>

