<html xmlns="http://www.w3.org/1999/xhtml" lang="us" xml:lang="us">
<head>
<meta http-equiv="Content-Language" content="us" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="Content-Style-Type" content="text/css" />
<meta http-equiv="Content-Script-Type" content="text/javascript" />
<meta http-equiv="imagetoolbar" content="no" />
<title>Amazon Web Service</title>
<%#= stylesheet_link_tag "screen", :media => "all" %>
</head>

<style>
body {
      padding-top: 100px;
      /*padding-left: 20px;
      padding-right: 20px;
      */}
</style>

<body>
<!-- # <%= @content_for_layout %> -->

<p>Find items at Amazon</p>
<%- form_tag :controller => 'amazon', :action => 'index' do -%>
  <%= text_field_tag "keyword", @keyword %><%= submit_tag "Find items at Amazon" %>
<%- end -%>

