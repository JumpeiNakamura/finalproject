<div class="page-header">
  <h1>Edit your profile</h1>
</div>

<% user = User.find_by(:id => params[:user_id]) %>

<form action="/users/<%= user.id %>/update" class="col-md-3">

<label class="control-label">
  <div class="form-group">
    <label>Edit your First Name:</label>
    <input name="first_name" type="text" class="form-control input-sm" value="<%= user.first_name %>">
  </div>
  <div class="form-group">
    <label>Edit your Last Name:</label>
    <input name="last_name" type="text" class="form-control input-sm" value="<%= user.last_name %>">
  </div>
  <div class="form-group">
    <label>Edit your email address:</label>
    <input name="email" type="text" class="form-control input-sm" value="<%= user.email %>">
  </div>
  <div class="form-group">
    <label>Edit a Password:</label>
    <input name="password" type="text" class="form-control input-sm" value="<%= user.password %>">
  </div>
  <div class="form-group">
    <label>Edit your zipcode to find the nearest deals:</label>
    <input name="zipcode" type="integer" class="form-control input-sm" value="<%= user.zipcode %>">
  </div>
  <div class="form-group">
    <label>Choose your prefered category to find hotdeals:</label>
    <%= select_tag "prf_category_id", options_for_select([['Tablet', 1], ['CellPhone', 2]]) %>
  </div>
  <div class="form-group">
    <label>Choose your prefered product to find hotdeals:</label>
    <%= select_tag "prf_product_id", options_for_select([['iPad', 1], ['Nexus7', 2], ['Galaxy3', 3]]) %>
  </div>
</label>

  <button type="submit" class="btn btn-success btn-md">Done!</button>
  or
  <%= link_to "Cancel", "/" %>
</form>
